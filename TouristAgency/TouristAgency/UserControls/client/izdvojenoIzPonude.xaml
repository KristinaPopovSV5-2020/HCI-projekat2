<UserControl x:Class="TouristAgency.UserControls.client.izdvojenoIzPonude"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TouristAgency.UserControls.client"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">
    <Grid>
        <Border Background="White" BorderBrush="Gray" BorderThickness="0.5"  CornerRadius="20">
            <Grid Margin="5">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="{Binding Naziv}"  x:Name="naziv" FontSize="15"></TextBlock>
                    <Button Content="{Binding Cena}" x:Name="cena" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="15" Style="{StaticResource orangeDugme}" Width="60"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
