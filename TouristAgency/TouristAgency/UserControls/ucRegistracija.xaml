<UserControl x:Class="TouristAgency.UserControls.ucRegistracija"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TouristAgency.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1080">
    <Grid>
        <Border Grid.Column="1" Background="White" Width="800" Height="650" CornerRadius="30" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid Width="800" Height="800" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock HorizontalAlignment="Center" FontSize="40" Margin="130" FontWeight="SemiBold">Registruj se</TextBlock>
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="270"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Korisničko ime" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="1" Text="Lozinka" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="2" Text="Potvrda lozinke" Style="{StaticResource text}"/>

                    <TextBox x:Name="txtUsername"   Grid.Column="1" Grid.Row="0" FontSize="20" />
                    <PasswordBox x:Name="txtPassword"  Grid.Column="1" Grid.Row="1"/>
                    <PasswordBox x:Name="txtCoPassword"  Grid.Column="1" Grid.Row="2"/>

                    <TextBlock x:Name="txtError" Grid.Row="3" Grid.ColumnSpan="2" FontSize="20"   Foreground="BlueViolet" HorizontalAlignment="Center" Text="" Visibility="Collapsed" />
                    <TextBlock x:Name="txtSucces" Grid.Row="3" Grid.ColumnSpan="2" FontSize="20"  Foreground="green" HorizontalAlignment="Center" Text="" Visibility="Collapsed"/>

                    <Button x:Name="btnRegistracija" Grid.Row="4" Grid.ColumnSpan="2" FontSize="24" HorizontalAlignment="Center" Margin="0 70 0 0" Style="{StaticResource buttonPurple}" Content=" Potvrdi " Click="BtnRegistracija_Click"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
